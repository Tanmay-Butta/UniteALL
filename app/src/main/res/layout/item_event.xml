<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Event Banner -->
        <ImageView
            android:id="@+id/eventBanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="@drawable/ic_placeholder"
            android:background="@color/black" />

        <!-- Event Title -->
        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingTop="8dp"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Event Description -->
        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Description goes here..."
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/darker_gray"
            android:paddingTop="2dp" />

        <!-- Event Date -->
        <TextView
            android:id="@+id/eventDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sep 17, 6:00 PM - 7:30 PM"
            android:textSize="13sp"
            android:textColor="@android:color/holo_blue_dark"
            android:paddingTop="6dp" />

        <!-- Event Distance -->
        <TextView
            android:id="@+id/eventDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABC ROAD, GHAZIABAD â€¢ 2.3 km away"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:paddingTop="2dp"
            android:paddingBottom="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
